      <%= image_tag("12_segunda.png")%>
      
      <% @eventos.each do |evento| %>
        <ul>
          <li class="event-date">
            <%= h evento.date -%>
          </li>
          <li class="event-theme">
            <%= h evento.name-%>
          </li>
